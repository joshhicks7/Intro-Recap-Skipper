{
  "manifest_version": 3,
  "name": "Intro & Recap Skipper",
  "version": "1.0",
  "description": "Auto-skip the intro and recap of tv shows without having to click a button. Works on Netflix, Prime Video, Hulu, and Peacock.",
  "permissions": [],
  "content_scripts":[
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/*",
        "*://*.peacocktv.com/*",
        "*://*.hulu.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}